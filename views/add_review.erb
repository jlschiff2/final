<div class="row">
    <div class="col-sm-9">
        <h1>Write a Review</h1>
        <p></p>
        <h1><%= @place[:name] %></h1>
        <h2><%= @place[:street] %></h2> 
        <h2><%= @place[:neighborhood] %>, <%= @place[:city] %></h2>   
        <p></p>
        <form action="/review/<%= @place[:name] %>/create">
            <div class="form-group">
                <label>Is this place a favorite?</label>
                    <select class="form-control" name="favorite">
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
            </div>
            <div class="form-group">
                <label>Write your review here.</label>
                <textarea class="form-control" rows="3" name="review"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>   