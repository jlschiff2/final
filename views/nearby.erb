<div class="row">
    <div class="col-sm-8">
    <h1>Where in Chicago are you?</h1>
    <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pick a neighborhood</a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <% for place in @places %>
                <a class="dropdown-item" href="/nearby/<%= place[:neighborhood] %>"> <%= place[:neighborhood] %></a>
                <% end %>
            </div>
    </div>
    </div>
</div>